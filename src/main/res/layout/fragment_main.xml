<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#4d4d4d"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="grupp07.bars.MainActivity$PlaceholderFragment">

    <ImageView
        android:id="@+id/imagecard1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        />


     <TextView
        android:id="@+id/section_label"
        android:layout_width="match_parent"
         android:layout_height="wrap_content"
        android:textColor="#ffffff"
         android:textSize="20dp"
         android:paddingLeft="10dp"
         android:layout_below="@+id/imagecard1"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/locationlogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/locationlogo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/moreinfo"
        android:src="@drawable/morelogo"
        android:layout_alignTop="@+id/locationlogo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"/>
</RelativeLayout>
